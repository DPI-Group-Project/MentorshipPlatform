<div class="flex flex-col items-center justify-center min-h-screen p-6">
  <h2 class="text-center text-3xl font-bold mb-8">Members of <%= @cohort.cohort_name if @cohort %></h2>
  
  <div class="flex flex-col md:flex-row justify-center items-center space-y-6 md:space-y-0 md:space-x-8 w-full md:w-auto">
    <!-- Mentor Card -->
    <div class="w-full max-w-2xl h-[500px] bg-white p-8 rounded-xl shadow-lg border border-gray-200 space-y-4 flex flex-col">
      <h3 class="text-2xl font-bold text-gray-800 text-center mb-4">Mentors</h3>
      <div class="flex-1 max-h-full overflow-y-auto space-y-4">
        <% @mentors.each do |mentor| %>
          <%= render partial: "cohort_member", locals: { cohort_member: mentor } %>
        <% end %>
      </div>
    </div>

    <!-- Mentee Card -->
    <div class="w-full max-w-2xl h-[500px] bg-white p-8 rounded-xl shadow-lg border border-gray-200 space-y-4 flex flex-col">
      <h3 class="text-2xl font-bold text-gray-800 text-center mb-4">Mentees</h3>
      <div class="flex-1 max-h-full overflow-y-auto space-y-4">
        <% @mentees.each do |mentee| %>
          <%= render partial: "cohort_member", locals: { cohort_member: mentee } %>
        <% end %>
      </div>
    </div>
  </div>
</div>
