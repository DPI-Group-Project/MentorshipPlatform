<div class="bg-gray-50 p-6 rounded-2xl shadow-lg space-y-4">
  <!-- Section Header -->
  <div class="bg-gray-100 p-4 rounded-md">
    <h2 class="text-lg font-bold text-center text-gray-800"><%= title %></h2>
  </div>

  <!-- Email Input Field -->
  <div>
    <%= form.label email_field, "Enter Email Address(es):", class: "block text-sm font-medium text-gray-700 mb-1" %>
    <input type="text" id="<%= email_input_id %>"
           placeholder="email1@example.com, email2@example.com"
           class="w-full border border-gray-300 rounded-lg px-3 py-2 mt-2 text-gray-700 focus:outline-none focus:ring-2 focus:ring-blue-400 transition ease-in-out"
           data-role="<%= data_role %>" data-cohort-id="<%= @cohort.id %>">
  </div>

  <!-- Email List -->
  <div class="bg-gray-50 h-32 border border-gray-200 rounded-lg overflow-y-auto p-2 shadow-inner" id="<%= list_id %>">
    <!-- Emails will be dynamically appended here by JavaScript -->
  </div>
</div>
