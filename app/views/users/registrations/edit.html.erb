<div class="min-h-screen flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
  <div class="bg-white p-8 rounded-lg shadow-md w-full max-w-3xl">
    <!-- Header Section -->
    <div class="text-center mb-8">
      <h2 class="text-3xl font-bold text-gray-900">Edit Profile</h2>
      <p class="mt-2 text-sm text-gray-600">Update your personal information and account settings</p>
    </div>

    <%= form_for(resource, url: registration_path(resource_name), html: { method: :put, id: "update-form", class: "space-y-8" }) do |f| %>
      <!-- Error Messages -->
      <% if resource.errors.any? %>
        <div class="bg-red-50 border-l-4 border-red-400 p-4 mb-6" role="alert">
          <div class="flex">
            <div class="flex-shrink-0">
              <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
              </svg>
            </div>
            <div class="ml-3">
              <h3 class="text-sm font-medium text-red-800">There were problems with your submission</h3>
              <div class="mt-2 text-sm text-red-700">
                <ul class="list-disc list-inside">
                  <% resource.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            </div>
          </div>
        </div>
      <% end %>

      <!-- Profile Picture Section -->
      <div class="bg-gray-50 p-6 rounded-lg">
        <h3 class="text-lg font-medium text-gray-900 mb-4">Profile Picture</h3>
        <div class="flex items-center space-x-6">
          <div class="flex-shrink-0">
            <% if resource.profile_picture.attached? %>
              <%= image_tag resource.profile_picture, class: "w-24 h-24 rounded-full object-cover border-4 border-white shadow" %>
            <% else %>
              <div class="w-24 h-24 rounded-full bg-gray-200 flex items-center justify-center">
                <svg class="w-12 h-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
                </svg>
              </div>
            <% end %>
          </div>
          <div class="flex-1">
            <%= f.file_field :profile_picture, 
                accept: 'image/*',
                class: "block w-full text-sm text-gray-900 border border-gray-300 rounded-lg cursor-pointer bg-white focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent",
                data: {
                  max_file_size: 5.megabytes,
                  accepted_types: ['image/jpeg', 'image/png', 'image/gif']
                } %>
            <p class="mt-2 text-xs text-gray-500">Upload a new profile picture (PNG, JPG, or GIF, max. 5MB)</p>
          </div>
        </div>
      </div>

      <!-- Personal Information Section -->
      <div class="bg-gray-50 p-6 rounded-lg space-y-6">
        <h3 class="text-lg font-medium text-gray-900 mb-4">Personal Information</h3>
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <!-- First Name Field -->
          <div class="relative">
            <%= f.text_field :first_name, required: true, class: "block w-full px-4 py-3 rounded-lg border-gray-300 focus:ring-blue-500 focus:border-blue-500 text-gray-900", placeholder: "First name" %>
            <label for="user_first_name" class="absolute -top-2 left-2 bg-gray-50 px-2 text-xs font-medium text-gray-600">First Name</label>
          </div>

          <!-- Last Name Field -->
          <div class="relative">
            <%= f.text_field :last_name, required: true, class: "block w-full px-4 py-3 rounded-lg border-gray-300 focus:ring-blue-500 focus:border-blue-500 text-gray-900", placeholder: "Last name" %>
            <label for="user_last_name" class="absolute -top-2 left-2 bg-gray-50 px-2 text-xs font-medium text-gray-600">Last Name</label>
          </div>
        </div>

        <!-- Email Field -->
        <div class="relative">
          <%= f.email_field :email, required: true, class: "block w-full px-4 py-3 rounded-lg border-gray-300 focus:ring-blue-500 focus:border-blue-500 text-gray-900", placeholder: "Email address" %>
          <label for="user_email" class="absolute -top-2 left-2 bg-gray-50 px-2 text-xs font-medium text-gray-600">Email Address</label>
        </div>

        <!-- Phone Number Field -->
        <div class="relative">
          <%= f.telephone_field :phone_number, class: "block w-full px-4 py-3 rounded-lg border-gray-300 focus:ring-blue-500 focus:border-blue-500 text-gray-900", placeholder: "Phone number" %>
          <label for="user_phone_number" class="absolute -top-2 left-2 bg-gray-50 px-2 text-xs font-medium text-gray-600">Phone Number (Optional)</label>
        </div>
      </div>

      <!-- Password Section -->
      <div class="bg-gray-50 p-6 rounded-lg space-y-6">
        <h3 class="text-lg font-medium text-gray-900 mb-4">Password Update</h3>
        
        <div class="space-y-4">
          <!-- New Password Field -->
          <div class="relative">
            <%= f.password_field :password, class: "block w-full px-4 py-3 rounded-lg border-gray-300 focus:ring-blue-500 focus:border-blue-500 text-gray-900", placeholder: "New password" %>
            <label for="user_password" class="absolute -top-2 left-2 bg-gray-50 px-2 text-xs font-medium text-gray-600">New Password (Optional)</label>
          </div>

          <!-- Password Confirmation Field -->
          <div class="relative">
            <%= f.password_field :password_confirmation, class: "block w-full px-4 py-3 rounded-lg border-gray-300 focus:ring-blue-500 focus:border-blue-500 text-gray-900", placeholder: "Confirm new password" %>
            <label for="user_password_confirmation" class="absolute -top-2 left-2 bg-gray-50 px-2 text-xs font-medium text-gray-600">Confirm New Password</label>
          </div>

          <!-- Current Password Field -->
          <div class="relative">
            <%= f.password_field :current_password, required: true, class: "block w-full px-4 py-3 rounded-lg border-gray-300 focus:ring-blue-500 focus:border-blue-500 text-gray-900", placeholder: "Current password" %>
            <label for="user_current_password" class="absolute -top-2 left-2 bg-gray-50 px-2 text-xs font-medium text-gray-600">Current Password (Required)</label>
          </div>
        </div>
      </div>

      <!-- Form Actions -->
      <div class="flex flex-col space-y-4">
        <div class="flex justify-between items-center">
          <%= f.submit "Save Changes", class: "px-6 py-3 bg-blue-600 text-white font-medium rounded-lg hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition-colors" %>
          <%= link_to "Cancel", :back, class: "px-6 py-3 bg-gray-200 text-gray-700 font-medium rounded-lg hover:bg-gray-300 focus:outline-none focus:ring-2 focus:ring-gray-500 focus:ring-offset-2 transition-colors" %>
        </div>
      </div>
    <% end %>

    <!-- Delete Account Section -->
    <div class="mt-12 pt-8 border-t border-gray-200">
      <div class="bg-red-50 p-6 rounded-lg">
        <h3 class="text-lg font-medium text-red-900 mb-2">Delete Account</h3>
        <p class="text-sm text-red-700 mb-4">Once you delete your account, there is no going back. Please be certain.</p>
        <%= form_for(resource, url: registration_path(resource_name), html: { method: :delete, id: "cancel-account-form" }) do |f| %>
          <%= f.submit "Delete Account", 
              class: "px-4 py-2 bg-red-600 text-white font-medium rounded-lg hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-red-500 focus:ring-offset-2 transition-colors",
              data: { 
                confirm: "Are you sure you want to delete your account? This action cannot be undone.",
                turbo_confirm: "Are you sure you want to delete your account? This action cannot be undone."
              } %>
        <% end %>
      </div>
    </div>
  </div>
</div>