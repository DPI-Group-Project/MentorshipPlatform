<div class="flex justify-center p-8">
  <!-- Sidebar -->
    <%= render partial: "admin_sidebar" %>
  <!-- Main Content -->
  <main class="w-[calc(100%-22rem)] p-6">
    <h1 class="text-2xl font-bold">Hi <%= current_user.first_name %>!</h1>
    <p class="text-gray-500">Welcome back to the Mentorship dashboard</p>
    <!-- Program Stats -->
    <div class="grid grid-cols-3 gap-4 mt-6">
     
      <div class="p-6 bg-white shadow rounded-lg">
        <p class="text-sm text-gray-500">Cohort Name</p>
        <h3 id="cohort_name" class="text-lg font-semibold"><%= @cohorts.first.cohort_name %></h3>
      </div>
      <div class="p-6 bg-white shadow rounded-lg">
        <p class="text-sm text-gray-500">Number of Pairing</p>
        <h3 id="nunber_of_pairings" class="text-lg font-semibold"><%= @cohorts.first.pairing_number %> Pairs</h3>
      </div>
      <div class="p-6 bg-white shadow rounded-lg">
        <p class="text-sm text-gray-500">Scheduled Meetings</p>
        <h3 id="scheduled_meetings" class="text-lg font-semibold">N/A</h3>
      </div>
    </div>
    <!-- Survey Ratings & Latest Surveys -->
    <div class="grid grid-cols-[288px,1fr] gap-x-4 gap-y-6 mt-6">
      <!-- Survey Ratings -->
      <div class="flex flex-col p-6 bg-white shadow rounded-lg text-center items-center">
        <h4 class="text-lg font-semibold mb-4">Survey Ratings</h4>
        <img src="<%= asset_path("sample_img/sample_chart.png") %>" alt="sample admin chart" class="w-[220px] h-[250px]">
