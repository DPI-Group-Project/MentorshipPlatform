<div class="grid grid-cols-3 gap-5">
  <div class="p-6 bg-white shadow-sm rounded-[0.8rem]">
    <p class="text-xs font-medium text-[#898989] pb-2">Total Cohorts Managed</p>
    <div class="flex justify-between">
      <h3 id="cohort_name" class="text-lg font-semibold">
        <%= @cohorts.count %>
        <% if @cohorts.count > 1 %>
          Cohorts
        <% else %>
          Cohort
        <% end %>
      </h3>
      <img src="<%= asset_path('icon/category.svg') %>" class="w-[1.5rem] fill-current">
    </div>
  </div>
  <div class="p-6 bg-white shadow-sm rounded-[0.8rem]">
    <p class="text-xs font-medium text-[#898989] pb-2">Total Matches Made</p>
    <div class="flex justify-between">
      <h3 id="number_of_pairings" class="text-lg font-semibold">
        <%= @total_matches %>
        <% if @total_matches > 1 %>
          Pairs
        <% else %>
          Pair
        <% end %>
      </h3>
      <img src="<%= asset_path('icon/2_user_gray.svg') %>" class="w-[1.5rem] fill-current">
    </div>
  </div>
  <div class="p-6 bg-white shadow-sm rounded-[0.8rem]">
    <p class="text-xs font-medium text-[#898989] pb-2">Days in Operation</p>
    <div class="flex justify-between">
      <h3 id="scheduled_meetings" class="text-lg font-semibold">
        <%= @days_since_creation %> Days
      </h3>
      <img src="<%= asset_path('icon/Calendar.svg') %>" class="w-[1.5rem] fill-current">
    </div>
  </div>
</div>