<%# app/views/dashboard/admin/_low_ratings.html.erb %>
<div class="bg-white rounded-lg shadow-sm p-6 mt-8">
  <div class="flex justify-between items-center mb-6">
    <h2 class="text-xl font-semibold text-gray-800">Low Rating Alerts</h2>
    <span class="bg-red-100 text-red-800 text-sm font-medium px-3 py-1 rounded-full">
      <%= @low_rated_surveys.count %> surveys
    </span>
  </div>

  <% if @low_rated_surveys.any? %>
    <div class="space-y-4">
      <% @low_rated_surveys.each do |survey| %>
        <div class="border border-gray-200 rounded-lg p-4 hover:bg-gray-50 transition-colors">
          <div class="flex justify-between items-start">
            <div>
              <p class="text-sm text-gray-600">
                Match ID: <%= survey.match_id %>
              </p>
              <div class="flex items-center mt-1">
                <div class="flex items-center">
                  <% survey.rating.times do %>
                    <svg class="w-4 h-4 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
                      <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                    </svg>
                  <% end %>
                </div>
                <span class="text-sm text-gray-500 ml-2">
                  Submitted <%= time_ago_in_words(survey.created_at) %> ago
                </span>
              </div>
            </div>
            <div class="text-right">
              <% if survey.responsive %>
                <span class="bg-green-100 text-green-800 text-xs font-medium px-2.5 py-0.5 rounded">Responsive</span>
              <% else %>
                <span class="bg-red-100 text-red-800 text-xs font-medium px-2.5 py-0.5 rounded">Not Responsive</span>
              <% end %>
            </div>
          </div>
          <% if survey.additional_note.present? %>
            <p class="mt-2 text-sm text-gray-700">
              <%= survey.additional_note %>
            </p>
          <% end %>
        </div>
      <% end %>
    </div>
  <% else %>
    <p class="text-gray-500 text-center py-8">No low-rated surveys found.</p>
  <% end %>
</div>