<div class="bg-white rounded-lg shadow-sm p-6 w-[737px] h-[367px]">
  <div class="flex justify-between items-center mb-6">
    <div>
      <h2 class="text-xl font-semibold text-gray-800">Latest Surveys</h2>
      <p class="text-sm text-gray-500 mt-1">Last 2 Weeks</p>
    </div>
    <button class="text-gray-400 hover:text-gray-600">
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 5v.01M12 12v.01M12 19v.01M12 6a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2z" />
      </svg>
    </button>
  </div>

  <div class="border-b border-gray-100">
    <div class="grid grid-cols-12 gap-4 text-sm font-medium text-gray-500 pb-3 px-4">
      <div class="col-span-1">#</div>
      <div class="col-span-3">Mentee</div>
      <div class="col-span-3">Mentor</div>
      <div class="col-span-2">Date</div>
      <div class="col-span-3">Rate</div>
    </div>
  </div>

  <div class="overflow-y-auto h-[220px] px-1">
    <% @low_rated_surveys.each_with_index do |survey, index| %>
      <div class="grid grid-cols-12 gap-4 items-center py-3 hover:bg-gray-50 px-3 border-b border-gray-50">
        <div class="col-span-1 text-gray-400 font-medium"><%= index + 1 %>.</div>
        <div class="col-span-3">
          <div class="flex items-center gap-2">
            <% if survey.match&.mentee&.profile_picture&.attached? %>
              <%= image_tag survey.match.mentee.profile_picture, 
                          class: "size-10 object-cover rounded-full border",
                          alt: "#{survey.match.mentee.name}'s profile picture" %>
            <% else %>
              <%= image_tag 'sample_img/mentor_sample.png', 
                          class: "size-10 object-cover rounded-full border",
                          alt: "Default profile picture" %>
            <% end %>
            <div class="flex flex-col">
              <p class="text-sm font-medium text-[#202020]">
                <%= survey.match.mentee.name rescue "Mentee" %>
              </p>
              <p class="text-xs text-gray-500">
                <%= survey.match.cohort.name rescue "Cohort" %>
              </p>
            </div>
          </div>
        </div>
        <div class="col-span-3">
          <p class="text-sm font-medium text-gray-800">
            <%= survey.match.mentor.name rescue "Mentor" %>
          </p>
        </div>
        <div class="col-span-2 text-sm text-gray-500">
          <%= survey.created_at.strftime("%m/%d/%y") %>
        </div>
        <div class="col-span-3 flex">
          <% survey.rating.times do %>
            <svg class="w-4 h-4 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
              <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
            </svg>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>