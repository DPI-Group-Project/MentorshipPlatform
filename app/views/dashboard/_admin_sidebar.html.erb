<div class="w-[17.5rem] h-auto p-6 bg-white rounded-[12px] shadow-md mr-8">
  <div class="flex items-center mb-4">
    <img src="<%= asset_path("sample_img/admin_user.png") %>" alt="Admin Avatar" class="w-12 h-12 rounded-full">
    <div class="ml-4">
      <h3 class="text-lg font-semibold"><%= current_user.name %></h3>
      <p class="text-sm text-gray-500"><%= current_user.title %></p>
      <p class="text-xs text-gray-400">Discovery Partners Institute</p>
    </div>
  </div>
  <div class="text-sm">
    <div class="mb-4">
      <h4 class="font-semibold text-gray-700"><%= @current_program.name %></h4>
      <ul class="mt-2 space-y-2">
        <li class="flex items-center hover:bg-gray-100 p-2 rounded transition-colors duration-200">
          <i class="fas fa-th-large mr-2"></i> Overview
        </li>
        <li class="flex items-center hover:bg-gray-100 p-2 rounded transition-colors duration-200">
          <i class="fas fa-folder-open mr-2"></i>
          <%= link_to "Cohorts", cohorts_url, class: "text-black" %>
        </li>
        <li class="flex items-center hover:bg-gray-100 p-2 rounded transition-colors duration-200">
          <i class="fas fa-envelope mr-2"></i> Message 
          <span class="ml-auto bg-red-500 text-white px-2 py-1 text-xs rounded-full">8</span>
        </li>
        <li class="flex items-center hover:bg-gray-100 p-2 rounded transition-colors duration-200">
          <i class="fas fa-bell mr-2"></i> Notification 
          <span class="ml-auto bg-red-500 text-white px-2 py-1 text-xs rounded-full">1</span>
        </li>
        <li class="flex items-center hover:bg-gray-100 p-2 rounded transition-colors duration-200">
          <i class="fas fa-users mr-2"></i> Members
        </li>
      </ul>
    </div>
    <div>
      <div class="flex items-center justify-between">
        <h4 class="font-semibold text-black">ACTIVE COHORTS</h4>
        <button 
          id="openModalBtn" 
          class="text-black ml-2 flex items-center"
          onclick="openModal('create_cohort_modal')"
        >
          <i class="fas fa-plus-circle text-xl"></i>
        </button>
      </div>
      <div class="mt-2">
        <% @cohorts.each do |cohort| %>
          <div class="dropdown">
            <button class="dropdown-toggle flex justify-between w-full text-left hover:bg-gray-100 p-2 rounded transition-colors duration-200">
              <span><i class="fas fa-folder mr-2"></i><%= cohort.cohort_name %></span>
              <i class="chevron fas fa-chevron-down transition-transform duration-300 mr-1"></i>
            </button>
            <ul class="dropdown-menu mt-2 pl-4 space-y-2 text-sm hidden">
              <li class="hover:bg-gray-100 p-2 rounded transition-colors duration-200">
                <button onclick="cohortInfo('<%= cohort.cohort_name %>', '<%= cohort.pairing_number %>')">
                  View dashboard
                </button>
              </li>
              <li class="hover:bg-gray-100 p-2 rounded transition-colors duration-200">
                <%= link_to "Add Members", new_cohort_member_path(cohort_id: cohort.id), class: "text-black" %>
              </li>
              <li class="hover:bg-gray-100 p-2 rounded transition-colors duration-200">
                <%= link_to "View Members", cohort_members_path(cohort_id: cohort.id), class: "text-black" %>
              </li>
              <li class="hover:bg-gray-100 p-2 rounded transition-colors duration-200">
                <%= link_to "Matches", matches_path(cohort_id: cohort.id), class: "text-black" %> 
              </li>
            </ul>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
<div id="program-list-modal" class="fixed inset-0 bg-black bg-opacity-50 hidden items-center justify-center z-50">
  <div class="bg-white p-8 rounded-lg shadow-lg w-[30rem] relative">
    <button class="absolute top-2 right-2 text-gray-500 hover:text-gray-700" onclick="closeModal('program-list-modal')">
      <i class="fas fa-times"></i>
    </button>
    <h1 class="font-medium mb-1">Cohorts:</h1>
    <ul class="mt-2 space-y-2">
      <% @cohorts.each do |cohort| %>
        <li>
          <%= cohort.cohort_name %>
          <%= cohort.description %>
          <%= cohort.start_date %>
          <%= cohort.end_date %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
<div id="create_cohort_modal" class="fixed inset-0 bg-black bg-opacity-50 hidden items-center justify-center z-50">
  <div class="bg-white p-8 rounded-lg shadow-lg w-[30rem] relative">
    <button 
      class="absolute top-2 right-2 text-gray-500 hover:text-gray-700"
      onclick="closeModal('create_cohort_modal')">
      <i class="fas fa-times"></i>
    </button>
    <%= render partial: "cohorts/form", locals: { cohort: Cohort.new } %>
  </div>
</div>
<script>
  function openModal(modalId) {
    const modal = document.getElementById(modalId);
    modal.classList.remove('hidden');
    modal.classList.add('flex');
  }
  function closeModal(modalId) {
    const modal = document.getElementById(modalId);
    modal.classList.add('hidden');
    modal.classList.remove('flex');
  }
  function cohortInfo(name, pairing_number) {
    const cohortName = document.getElementById('cohort_name');
    const numberOfPairings = document.getElementById('number_of_pairings');
    const scheduledMeetings = document.getElementById('scheduled_meetings');

    cohortName.textContent = name;
    numberOfPairings.textContent = pairing_number + " Pairs";
    scheduledMeetings.textContent = "N/A";
  }
</script>
