<div id="program-admin-modal" class="fixed inset-0 bg-gray-900 bg-opacity-50 hidden flex items-center justify-center z-50">
  <div class="bg-white w-full max-w-2xl rounded-lg shadow-lg p-6 relative">
    <button 
      class="absolute top-3 right-3 text-gray-500 hover:text-gray-700"
      onclick="closeModal('program-admin-modal')">
      <i class="fas fa-times"></i>
    </button>

    <h2 class="text-2xl font-bold text-gray-800 mb-4">Manage Admins</h2>

    <% if @program_admins.present? %>
      <div class="overflow-x-auto rounded-lg shadow-md">
        <table class="min-w-full bg-white border border-gray-300 divide-y divide-gray-200">
          <thead class="bg-[#202020]">
            <tr>
              <th class="py-3 px-6 text-left text-xs font-semibold text-white uppercase tracking-wider">Email</th>
              <th class="py-3 px-6 text-left text-xs font-semibold text-white uppercase tracking-wider">Program</th>
              <th class="py-3 px-6 text-left text-xs font-semibold text-white uppercase tracking-wider">Actions</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-gray-200">
            <% @program_admins.includes(:admin).each do |admin| %>
              <tr class="hover:bg-gray-50">
                <td class="py-4 px-6 text-sm text-gray-800"><%= admin.admin&.email %></td>
                <td class="py-4 px-6 text-sm text-gray-800"><%= admin.program.name %></td>
                <td class="py-4 px-6 text-sm text-gray-800">
                  <% if admin.created_by_admin_id == current_user.id %>
                    <button 
                      data-id="<%= admin.id %>" 
                      class="text-red-600 hover:text-red-800 font-medium px-3 py-1 bg-red-50 rounded-md shadow-sm hover:bg-red-100 delete-btn">
                      Delete
                    </button>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% else %>
      <p class="text-gray-600 mt-4">No other admins found for the current program.</p>
    <% end %>
  </div>
</div>

<!-- Delete Confirmation Modal -->
<div id="delete-modal" class="fixed inset-0 z-50 hidden bg-gray-900 bg-opacity-50 flex items-center justify-center">
  <div class="bg-white w-full max-w-md rounded-lg p-6 relative">
    <h2 class="text-lg font-semibold mb-4">Confirm Delete</h2>
    <p class="text-gray-700 mb-6">Are you sure you want to delete this admin? This action cannot be undone.</p>
    <div class="flex justify-end space-x-4">
      <button id="cancel-delete" class="px-4 py-2 bg-gray-200 text-gray-800 rounded hover:bg-gray-300">Cancel</button>
      <button id="confirm-delete" class="px-4 py-2 bg-red-600 text-white rounded hover:bg-red-700">Confirm</button>
    </div>
  </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function () {
  const deleteModal = document.getElementById('delete-modal');
  const cancelDeleteButton = document.getElementById('cancel-delete');
  const confirmDeleteButton = document.getElementById('confirm-delete');

  let adminToDeleteId = null;

  document.querySelectorAll('.delete-btn').forEach(btn => {
    btn.addEventListener('click', function () {
      adminToDeleteId = this.getAttribute('data-id');
      deleteModal.classList.remove('hidden');
    });
  });

  cancelDeleteButton.addEventListener('click', function () {
    deleteModal.classList.add('hidden');
    adminToDeleteId = null;
  });

  confirmDeleteButton.addEventListener('click', function () {
    if (adminToDeleteId) {
      fetch(`/dashboard/delete_program_admin/${adminToDeleteId}`, {
        method: 'POST',
        headers: {
          'X-CSRF-Token': document.querySelector('meta[name="csrf-token"]').content,
          'Content-Type': 'application/json'
        }
      }).then(response => {
        if (response.ok) location.reload();
      });
      deleteModal.classList.add('hidden');
    }
  });
});
</script>
