<h1>Sign Up NOW!</h1>
<%= display = "" %>
<div data-controller="signup">
  <h2>Mentor or Mentee?</h2>
  <button onclick=<%= display = "mentor" %>>Mentor</button>
  <button onclick=<%= display = "mentee" %>>Mentee</button>
</div>


<div style="margin-top: 5px" data-controller="signup">
  <% if display == "mentor" %>
      <% pp display %>
      <%= render "mentor_form" %>
  <% elsif display == "mentee"%>
      <% pp display %>
      <%= render "mentee_form" %>
  <% end %>
</div>