<div id="<%= cohort.id %>_delete_modal" class="fixed inset-0 z-50 hidden bg-gray-900 bg-opacity-50 flex items-center justify-center">
  <div class="bg-white w-full max-w-md rounded-lg p-6 relative">
    <h2 class="text-lg font-semibold mb-4">Confirm Delete</h2>
    <p class="text-gray-700 mb-6">Are you sure you want to delete this cohort? This action cannot be undone.</p>
    <div class="flex justify-end space-x-4">
      <button class="px-4 py-2 bg-gray-200 text-gray-800 rounded hover:bg-gray-300"
              onclick="document.getElementById('<%= cohort.id %>_delete_modal').classList.add('hidden')">
        Cancel
      </button>

      <%= button_to cohort_path(cohort), method: :delete, 
        class: "px-4 py-2 bg-red-600 text-white rounded hover:bg-red-700" do %>
        Confirm
      <% end %>
    </div>
  </div>
</div>
