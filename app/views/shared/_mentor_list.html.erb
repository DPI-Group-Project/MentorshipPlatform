<h1>Available Mentors</h1>
<% mentors_data.each do |mentor| %>
    <!-- Mentor Block -->
    <div class="mb-8"> <!-- Add margin-bottom for spacing -->
        <img src="<%= mentor.user.profile_picture %>" alt="Mentor Image">

        <h2><%= mentor.user.first_name + " " + mentor.user.last_name %></h2>
        <h3><%= mentor.user.title %></h3>
        
        <% mentor.user.skills_array.each do |skill| %>
            <span><%= skill %></span>
        <% end %>
            
        <a href="<%= profile_path(mentor.user_id) %>"><strong>View</strong></a>
    </div>
<% end %>
