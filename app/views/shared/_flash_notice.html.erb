<div id="notice" class="fixed top-4 left-1/2 transform -translate-x-1/2 z-50 transition-opacity duration-500 ease-in-out opacity-100">
  <div class="bg-blue-50 border border-blue-200 text-blue-700 rounded-lg shadow-lg px-4 py-3 flex items-center gap-3 w-[95%] sm:w-[400px]">
    <img src="<%= asset_path('icon/info.svg') %>" alt="Notice icon" class="w-6 h-6">
    <div>
      <p class="text-sm font-medium">Notification</p>
      <p class="text-xs text-gray-600"><%= message %></p>
    </div>
    <button class="ml-auto text-gray-500 hover:text-blue-700" onclick="fadeOut(document.getElementById('notice'))">
      &times;
    </button>
  </div>
</div>

<script>
  function fadeOut(element) {
    if (element) {
      element.style.opacity = '0';
      setTimeout(() => element?.remove(), 1000);
    }
  }

  setTimeout(() => fadeOut(document.getElementById('notice')), 4000);
</script>
