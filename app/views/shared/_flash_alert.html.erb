<div id="alert-notice" class="fixed top-4 left-1/2 transform -translate-x-1/2 z-50 transition-opacity duration-500 opacity-100">
  <div class="flex items-center bg-red-50 border border-red-200 text-red-700 rounded-lg shadow-md px-4 py-3 w-[95%] sm:w-[400px]">
    <img src="<%= asset_path('icon/alert.svg') %>" alt="Alert icon" class="w-6 h-6">
    <div class="ml-3">
      <p class="text-sm font-medium">Alert</p>
      <p class="text-xs text-gray-600"><%= message %></p>
    </div>
    <button class="ml-auto text-gray-600 hover:text-red-700" onclick="fadeOut(this.closest('#alert-notice'))">
      &times;
    </button>
  </div>
</div>

<script>
  function fadeOut(element) {
    if (element) {
      element.style.transition = 'opacity 0.5s ease';
      element.style.opacity = '0';
      setTimeout(() => {
        element.style.display = 'none';
      }, 500); 
    }
  }

  setTimeout(() => {
    fadeOut(document.getElementById('alert-notice'));
  }, 4000);
</script>
