<!-- crudModal.html -->
<div id="crud-modal" tabindex="-1" aria-hidden="true" class="overflow-y-auto overflow-x-hidden fixed top-0 right-0 left-0 z-50 justify-center items-center w-full md:inset-0 h-[calc(100%-1rem)] max-h-full">
  <div class="relative p-4 w-full max-w-md max-h-full">
    <div class="relative bg-white rounded-lg shadow dark:bg-[#676666]">
      <!-- Modal header -->
      <div class="flex items-center justify-between px-6 pt-6 md:px-6 md:pt-6 rounded-t dark:border-[#898989]">
        <h3 class="text-lg font-semibold text-[#202020] dark:text-white">
          Update Meeting
        </h3>
        <button type="button" class="text-gray-400 bg-transparent hover:bg-gray-200 hover:text-[#202020] rounded-lg text-sm w-8 h-8 ms-auto inline-flex justify-center items-center dark:hover:bg-[#898989] dark:hover:text-white" data-modal-toggle="crud-modal">
          <svg class="w-3 h-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 14">
            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6"/>
          </svg>
          <span class="sr-only">Close modal</span>
        </button>
      </div>
      <!-- Modal body -->
      <form class="p-4 md:p-5">
        <div class="grid gap-4 mb-4 grid-cols-2">
          <!-- Date, Time, Location, and Note inputs as provided -->
        </div>
        <button type="submit" class="text-white inline-flex items-center bg-[#202020] hover:bg-[#202020] focus:ring-4 focus:outline-none focus:ring-[#D9D9D9] font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-[#898989] dark:hover:bg-[#676666] dark:focus:ring-[#202020]">
          <!-- SVG icon as provided -->
          Update
        </button>
      </form>
    </div>
  </div>
</div>
