<div class="flex justify-center">
  <div class="bg-white rounded-xl shadow-md mt-[10rem] sm:w-1/3 w-[90%] p-4">
    <%= form_with(model: @meeting, local: true) do |form| %>
      <%= form.hidden_field :match_id, value: @match.id %>
      <div class="p-4 md:p-5">
        <div class="grid gap-4 mb-4 grid-cols-2">
          <h3 class="text-lg font-semibold text-[#202020] dark:text-white">
            Create New Meeting
          </h3>
          <!-- Date -->
          <div class="col-span-2">
            <%= form.label :date, class: "block mb-2 text-sm font-medium text-[#202020] dark:text-white" %>
            <div class="relative">
              <%= form.date_field :date, class: "bg-gray-50 border border-[#D9D9D9] text-[#202020] text-sm rounded-lg focus:ring-[#898989] focus:border-[#898989] block w-full p-2.5", placeholder: "Select date" %>
            </div>
          </div>

          <!-- Time -->
          <div class="col-span-2">
            <%= form.label :time, "Select time:", class: "block mb-2 text-sm font-medium text-[#202020] dark:text-white" %>
            <div class="relative">
              <div class="absolute inset-y-0 end-0 top-0 flex items-center pe-3.5 pointer-events-none">
                <svg class="w-4 h-4 text-[#898989] dark:text-gray-400" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 24 24">
                  <path fill-rule="evenodd" d="M2 12C2 6.477 6.477 2 12 2s10 4.477 10 10-4.477 10-10 10S2 17.523 2 12Zm11-4a1 1 0 1 0-2 0v4a1 1 0 0 0 .293.707l3 3a1 1 0 0 0 1.414-1.414L13 11.586V8Z" clip-rule="evenodd"/>
                </svg>
              </div>
              <%= form.time_field :time, id: "time", class: "bg-gray-50 border leading-none border-[#D9D9D9] text-[#202020] text-sm rounded-lg focus:ring-[#898989] focus:border-[#898989] block w-full p-2.5 ", required: true %>
            </div>
          </div>

          <!-- Location Type -->
          <div class="col-span-2">
            <%= form.label :location_type, "Location", class: "block mb-2 text-sm font-medium text-[#202020] dark:text-white" %>
            <div class="flex gap-2">
              <%= form.select :location_type, options_for_select([["Select", ""], ["Online", "On"], ["In-person", "In"]]), {}, class: "w-1/3 bg-gray-50 border border-[#D9D9D9] text-[#202020] text-sm rounded-lg focus:ring-[#898989] focus:border-[#898989] block w-full p-2.5 dark:bg-[#898989] dark:border-[#898989] dark:placeholder-gray-400 dark:text-white dark:focus:ring-[#898989] dark:focus:border-[#898989]" %>
              <%= form.text_field :location, id: "location", class: "bg-gray-50 border border-[#D9D9D9] text-[#202020] text-sm rounded-lg focus:ring-[#898989] focus:border-[#898989] block w-full p-2.5 dark:bg-[#898989] dark:border-[#898989] dark:placeholder-gray-400 dark:text-white dark:focus:ring-[#898989] dark:focus:border-[#898989]", placeholder: "Address", required: true %>
            </div>
          </div>

          <!-- Note -->
          <div class="col-span-2">
            <%= form.label :notes, "Note", class: "block mb-2 text-sm font-medium text-[#202020] dark:text-white" %>
            <%= form.text_area :notes, rows: 4, class: "block p-2.5 w-full text-sm text-[#202020] bg-gray-50 rounded-lg border border-[#D9D9D9] focus:ring-[#898989] focus:border-[#898989] dark:bg-[#898989] dark:border-[#898989] dark:placeholder-gray-400 dark:text-white dark:focus:ring-[#898989] dark:focus:border-[#898989]", placeholder: "Write your note here" %>
          </div>
        </div>

        <div class="flex col-span-2 justify-center">
          <%= form.submit "Create Meeting", class: "text-white inline-flex items-center bg-[#202020] hover:bg-[#202020] focus:ring-4 focus:outline-none focus:ring-[#D9D9D9] font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-[#898989] dark:hover:bg-[#676666] dark:focus:ring-[#202020]" %>
        </div>
      </div>
    <% end %>
  </div>
</div>