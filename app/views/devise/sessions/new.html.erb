<div class="min-h-screen flex items-center justify-center bg-gray-100 py-12">
  <div class="w-full max-w-md bg-white p-8 rounded-lg shadow-lg">
    <h2 class="text-3xl font-semibold text-center text-gray-800 mb-8">Login</h2>
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-6" }) do |f| %>
      <div class="form-inputs space-y-4">
        <div>
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email", class: "w-full p-3 border border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500" } %>
        </div>
        <div>
          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password", class: "w-full p-3 border border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500" } %>
        </div>
        <% if devise_mapping.rememberable? %>
          <div class="flex items-center">
            <%= f.input :remember_me, as: :boolean, wrapper: false, label_html: { class: "ml-2 block text-sm text-gray-800" } %>
          </div>
        <% end %>
      </div>
      <div class="form-actions mt-6">
        <%= f.button :submit, "Log in", class: "w-full bg-blue-600 text-white py-2.5 rounded-md hover:bg-blue-700 focus:ring-4 focus:ring-blue-300 focus:outline-none" %>
      </div>
    <% end %>
    <div class="mt-6 text-center">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
