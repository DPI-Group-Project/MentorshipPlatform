<div class="bg-white flex justify-center w-full">
  <div class="relative bg-white w-full min-h-screen flex flex-col lg:flex-row lg:flex-grow">
    
    <!-- right section with form (60% width) -->
    <div class="flex flex-col justify-center items-center w-full lg:w-3/5 lg:flex-grow px-4 lg:px-12 py-12">
      <h2 class="text-3xl font-bold mb-8 text-center lg:text-left">Login</h2>
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-6" }) do |f| %>
        <div class="form-inputs space-y-4">
          <div>
            <%= f.input :email,
                        required: false,
                        autofocus: true,
                        input_html: { autocomplete: "email", class: "mt-1 w-full h-10 px-4 rounded border border-gray-300 shadow-sm" } %>
          </div>
          <div>
            <%= f.input :password,
                        required: false,
                        input_html: { autocomplete: "current-password", class: "mt-1 w-full h-10 px-4 rounded border border-gray-300 shadow-sm" } %>
          </div>
          <% if devise_mapping.rememberable? %>
            <div class="flex items-center">
              <%= f.input :remember_me, as: :boolean, wrapper: false, label_html: { class: "ml-2 block text-sm text-gray-800" } %>
            </div>
          <% end %>
        </div>
        <div class="form-actions mt-6">
          <%= f.button :submit, "Log in", class: "w-full lg:w-[400px] h-10 bg-[#27485d] text-white font-bold rounded shadow-sm hover:bg-[#1b3c4a]" %>
        </div>
      <% end %>
      <div class="mt-6 text-center">
        <%= render "devise/shared/links" %>
      </div>
    </div>

    <!-- left section with background gradient and logo (40% width) -->
    <div class="w-full lg:w-2/5 min-h-full bg-gradient-to-b from-[#517879] to-[#1e3e57]">
      <div class="flex justify-center items-center h-full">
        <%= image_tag 'sample_img/dpi_logo_2.png', class: "mx-auto", alt: "DPI Logo" %>
      </div>
    </div>
  </div>
</div>
